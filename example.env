# Environment type (e.g., development, production)
NODE_ENV=development

# Port number on which your server will run
PORT=5000

# Database connection string (e.g., MongoDB URI)
DATABASE_URL=mongodb://localhost:27017/your_database_name

# Number of salt rounds for bcrypt (e.g., 10)
BCRYPT_SALT_ROUNDS=10

# Default password to assign if not specified (use with caution)
DEFAULT_PASS=your_default_password

# JWT access token secret key
JWT_ACCESS_SECRET=your_jwt_access_secret

# JWT refresh token secret key
JWT_REFRESH_SECRET=your_jwt_refresh_secret

# Access token expiration time (e.g., 1h, 15m, 7d)
JWT_ACCESS_EXPIRES_IN=1h

# Refresh token expiration time (e.g., 30d, 7d)
JWT_REFRESH_EXPIRES_IN=30d

# URL of the frontend reset password UI
RESET_PASS_UI_LINK=https://your-frontend-domain.com/reset-password

# Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Cloudinary API key
CLOUDINARY_API_KEY=your_cloudinary_api_key

# Cloudinary API secret
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Super admin password (used for seeding or secure access)
SUPER_ADMIN_PASSWORD=your_super_admin_password
